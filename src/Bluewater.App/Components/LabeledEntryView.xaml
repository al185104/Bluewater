<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Components.LabeledEntryView">
	<VerticalStackLayout Spacing="4">
		<!-- Title -->
		<Label Text="{Binding Source={x:Reference Root}, Path=Title}"
			   FontSize="12"
			   TextColor="{Binding Source={x:Reference Root}, Path=TitleColor}"
			   Opacity="0.8" />
		<!-- Entry -->
		<Entry Text="{Binding Source={x:Reference Root}, Path=Text, Mode=TwoWay}"
			   Placeholder="{Binding Source={x:Reference Root}, Path=Placeholder}"
			   Keyboard="{Binding Source={x:Reference Root}, Path=Keyboard}"
			   IsPassword="{Binding Source={x:Reference Root}, Path=IsPassword}"
			   TextColor="{Binding Source={x:Reference Root}, Path=TextColor}"
			   FontSize="16" />
	</VerticalStackLayout>
</ContentView>
