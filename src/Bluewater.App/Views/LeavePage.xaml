<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bluewater.App.Models"
             xmlns:selectors="clr-namespace:Bluewater.App.Selectors"
             x:Class="Bluewater.App.Views.LeavePage"
             Title="LeavePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LeaveRowBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="Stroke"
                        Value="Transparent" />
                <Setter Property="Padding"
                        Value="20,12" />
            </Style>
            <DataTemplate x:Key="LeavePrimaryTemplate"
                          x:DataType="models:LeaveSummary">
                <Border Style="{StaticResource LeaveRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="2*,Auto,Auto,Auto"
                          VerticalOptions="Center">
                        <Label Text="{Binding EmployeeName}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding StartDate, StringFormat='{0:d}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="2"
                               Text="{Binding EndDate, StringFormat='{0:d}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="3"
                               Text="{Binding Status}"
                               FontSize="13"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="LeaveAlternateTemplate"
                          x:DataType="models:LeaveSummary">
                <Border Style="{StaticResource LeaveRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#0A386eb3, Dark=#262626}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="2*,Auto,Auto,Auto"
                          VerticalOptions="Center">
                        <Label Text="{Binding EmployeeName}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding StartDate, StringFormat='{0:d}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="2"
                               Text="{Binding EndDate, StringFormat='{0:d}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="3"
                               Text="{Binding Status}"
                               FontSize="13"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </DataTemplate>
            <selectors:AlternateRowTemplateSelector x:Key="LeaveTemplateSelector"
                                                    PrimaryTemplate="{StaticResource LeavePrimaryTemplate}"
                                                    AlternateTemplate="{StaticResource LeaveAlternateTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <CollectionView ItemsSource="{Binding Leaves}"
                    ItemTemplate="{StaticResource LeaveTemplateSelector}">
        <CollectionView.Header>
            <Border StrokeShape="RoundRectangle 10 10 0 0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                <Grid ColumnSpacing="12"
                      Padding="20,14"
                      ColumnDefinitions="2*,Auto,Auto,Auto">
                    <Label Text="Employee"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="Start"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="2"
                           Text="End"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="3"
                           Text="Status"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                </Grid>
            </Border>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <Label Text="No leave requests"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Approved or pending leave will display here."
                       HorizontalTextAlignment="Center"
                       FontSize="12" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>
