<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Views.LeavePage"
             Title="LeavePage">
    <CollectionView ItemsSource="{Binding Leaves}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding EmployeeName}" FontAttributes="Bold" />
                    <Label Text="{Binding StartDate, StringFormat='From: {0:d}'}" FontSize="12" />
                    <Label Text="{Binding EndDate, StringFormat='To: {0:d}'}" FontSize="12" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>