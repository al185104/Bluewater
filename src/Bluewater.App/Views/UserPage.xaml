<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Bluewater.App.ViewModels"
             xmlns:selectors="clr-namespace:Bluewater.App.Selectors"
             x:Class="Bluewater.App.Views.UserPage"
             Shell.NavBarIsVisible="False">
    <Grid Padding="16">
        <Grid.Resources>
            <ResourceDictionary>
                <Style x:Key="UserRowBorderStyle"
                       TargetType="Border">
                    <Setter Property="StrokeThickness"
                            Value="1" />
                    <Setter Property="Stroke"
                            Value="Transparent" />
                    <Setter Property="Padding"
                            Value="20,12" />
                </Style>
                <DataTemplate x:Key="UserPrimaryTemplate"
                              x:DataType="viewModels:UserAccount">
                    <Border Style="{StaticResource UserRowBorderStyle}"
                            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                        <Grid ColumnSpacing="12"
                              ColumnDefinitions="2*,*,Auto"
                              RowDefinitions="Auto"
                              VerticalOptions="Center">
                            <Label Text="{Binding Username}"
                                   FontAttributes="Bold" />
                            <Label Grid.Column="1"
                                   Text="{Binding Credential}"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                            <Label Grid.Column="2"
                                   Text="{Binding IsGlobalSupervisor, StringFormat='{0}'}"
                                   FontSize="13"
                                   HorizontalTextAlignment="End" />
                        </Grid>
                    </Border>
                </DataTemplate>
                <DataTemplate x:Key="UserAlternateTemplate"
                              x:DataType="viewModels:UserAccount">
                    <Border Style="{StaticResource UserRowBorderStyle}"
                            BackgroundColor="{AppThemeBinding Light=#0A386eb3, Dark=#262626}">
                        <Grid ColumnSpacing="12"
                              ColumnDefinitions="2*,*,Auto"
                              RowDefinitions="Auto"
                              VerticalOptions="Center">
                            <Label Text="{Binding Username}"
                                   FontAttributes="Bold" />
                            <Label Grid.Column="1"
                                   Text="{Binding Credential}"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                            <Label Grid.Column="2"
                                   Text="{Binding IsGlobalSupervisor, StringFormat='{0}'}"
                                   FontSize="13"
                                   HorizontalTextAlignment="End" />
                        </Grid>
                    </Border>
                </DataTemplate>
                <selectors:AlternateRowTemplateSelector x:Key="UserTemplateSelector"
                                                        PrimaryTemplate="{StaticResource UserPrimaryTemplate}"
                                                        AlternateTemplate="{StaticResource UserAlternateTemplate}" />
            </ResourceDictionary>
        </Grid.Resources>
        <CollectionView ItemsSource="{Binding Users}"
                        ItemTemplate="{StaticResource UserTemplateSelector}">
            <CollectionView.Header>
                <Border StrokeShape="RoundRectangle 10 10 0 0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                    <Grid ColumnSpacing="12"
                          Padding="20,14"
                          ColumnDefinitions="2*,*,Auto">
                        <Label Text="Username"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="Credential"
                               TextColor="White"
                               FontAttributes="Bold" />
                        <Label Grid.Column="2"
                               Text="Global Supervisor"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </CollectionView.Header>
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="24"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <Label Text="No users available"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Add a user to get started."
                           HorizontalTextAlignment="Center"
                           FontSize="12" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
