<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Bluewater.App.ViewModels"
             x:Class="Bluewater.App.Views.UserPage"
             Shell.NavBarIsVisible="False">
    <Grid Padding="16">
        <CollectionView ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:UserAccount">
                    <Grid Padding="8"
                          ColumnDefinitions="2*,*,Auto"
                          ColumnSpacing="12"
                          RowDefinitions="Auto">
                        <Label Text="{Binding Username}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding Credential}"
                               FontSize="12" />
                        <Label Grid.Column="2"
                               Text="{Binding IsGlobalSupervisor, StringFormat='{0}'}"
                               FontSize="12"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Header>
                <Grid ColumnDefinitions="2*,*,Auto"
                      Padding="8"
                      ColumnSpacing="12"
                      BackgroundColor="{AppThemeBinding Light=#F0F4FA, Dark=#1F1F1F}">
                    <Label Text="Username"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="Credential"
                           FontAttributes="Bold" />
                    <Label Grid.Column="2"
                           Text="Global Supervisor"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                </Grid>
            </CollectionView.Header>
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="24"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="8">
                    <Label Text="No users available"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />
                    <Label Text="Add a user to get started."
                           HorizontalTextAlignment="Center"
                           FontSize="12" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
