                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{x:Static helpers:Icon.ChevronRight}" FontFamily="Icons" Style="{StaticResource HeadingTextStyle}" />
