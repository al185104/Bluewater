<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Views.PayrollPage"
             Title="PayrollPage">
    <CollectionView ItemsSource="{Binding Payrolls}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding Name}" FontAttributes="Bold" />
                    <Label Text="{Binding NetAmount, StringFormat='Net: {0:C}'}" FontSize="12" />
                    <Label Text="{Binding Date, StringFormat='Date: {0:d}'}" FontSize="12" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>