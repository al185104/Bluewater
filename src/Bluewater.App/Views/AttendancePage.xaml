<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Views.AttendancePage"
             Title="AttendancePage">
    <CollectionView ItemsSource="{Binding Attendances}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding EntryDate}" FontAttributes="Bold" />
                    <Label Text="{Binding WorkHours, StringFormat='Work Hours: {0:F2}'}" FontSize="12" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>