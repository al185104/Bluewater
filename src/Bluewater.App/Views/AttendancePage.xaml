<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bluewater.App.Models"
             xmlns:selectors="clr-namespace:Bluewater.App.Selectors"
             x:Class="Bluewater.App.Views.AttendancePage"
             Title="AttendancePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="AttendanceRowBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="Stroke"
                        Value="Transparent" />
                <Setter Property="Padding"
                        Value="20,12" />
            </Style>
            <DataTemplate x:Key="AttendancePrimaryTemplate"
                          x:DataType="models:AttendanceSummary">
                <Border Style="{StaticResource AttendanceRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="2*,*,*,Auto"
                          VerticalOptions="Center">
                        <Label Text="{Binding EntryDate, StringFormat='{0:d}'}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding WorkHours, StringFormat='{0:F2}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="2"
                               Text="{Binding LateHours, StringFormat='{0:F2}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="3"
                               Text="{Binding IsLocked, StringFormat='{0}'}"
                               FontSize="13"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="AttendanceAlternateTemplate"
                          x:DataType="models:AttendanceSummary">
                <Border Style="{StaticResource AttendanceRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#0A386eb3, Dark=#262626}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="2*,*,*,Auto"
                          VerticalOptions="Center">
                        <Label Text="{Binding EntryDate, StringFormat='{0:d}'}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding WorkHours, StringFormat='{0:F2}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="2"
                               Text="{Binding LateHours, StringFormat='{0:F2}'}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                        <Label Grid.Column="3"
                               Text="{Binding IsLocked, StringFormat='{0}'}"
                               FontSize="13"
                               HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </DataTemplate>
            <selectors:AlternateRowTemplateSelector x:Key="AttendanceTemplateSelector"
                                                    PrimaryTemplate="{StaticResource AttendancePrimaryTemplate}"
                                                    AlternateTemplate="{StaticResource AttendanceAlternateTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <CollectionView ItemsSource="{Binding Attendances}"
                    ItemTemplate="{StaticResource AttendanceTemplateSelector}">
        <CollectionView.Header>
            <Border StrokeShape="RoundRectangle 10 10 0 0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                <Grid ColumnSpacing="12"
                      Padding="20,14"
                      ColumnDefinitions="2*,*,*,Auto">
                    <Label Text="Entry Date"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="Work Hours"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="2"
                           Text="Late Hours"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="3"
                           Text="Locked"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="End" />
                </Grid>
            </Border>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <Label Text="No attendance records"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Attendance entries will appear here once added."
                       HorizontalTextAlignment="Center"
                       FontSize="12" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>
