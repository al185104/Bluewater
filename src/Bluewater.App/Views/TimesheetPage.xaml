<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Views.TimesheetPage"
             Title="TimesheetsPage">
    <CollectionView ItemsSource="{Binding Timesheets}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding EntryDate}" FontAttributes="Bold" />
                    <Label Text="{Binding TimeIn1, StringFormat='In: {0:t}'}" FontSize="12" />
                    <Label Text="{Binding TimeOut1, StringFormat='Out: {0:t}'}" FontSize="12" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>