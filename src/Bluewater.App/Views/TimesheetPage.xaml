<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bluewater.App.Models"
             xmlns:converters="clr-namespace:Bluewater.App.Converters"
             x:Class="Bluewater.App.Views.TimesheetPage"
             Title="Timesheets">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
            <Style x:Key="TimesheetRowBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="Stroke"
                        Value="Transparent" />
                <Setter Property="Padding"
                        Value="16,12" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid Padding="20,40"
              RowDefinitions="Auto,Auto,*"
              RowSpacing="16">
            <Grid ColumnDefinitions="*,Auto,Auto"
                  ColumnSpacing="12">
                <Label Text="Timesheets"
                       Style="{StaticResource HeadingTextStyle}" />
                <Button Grid.Column="1"
                        Text="Apply"
                        Command="{Binding ApplyDateRangeCommand}" />
                <Button Grid.Column="2"
                        Text="Refresh"
                        Command="{Binding RefreshCommand}" />
            </Grid>
            <Grid Grid.Row="1"
                  ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*"
                  ColumnSpacing="12"
                  RowSpacing="4">
                <Label Text="Charging"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <Picker Grid.Column="1"
                        Title="Select charging"
                        ItemsSource="{Binding Chargings}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedCharging}" />
                <Label Grid.Column="2"
                       Text="Tenant"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <Picker Grid.Column="3"
                        Title="Select tenant"
                        ItemsSource="{Binding TenantOptions}"
                        SelectedItem="{Binding SelectedTenant}" />
                <Label Grid.Column="4"
                       Text="Start Date"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <DatePicker Grid.Column="5"
                            Date="{Binding StartDate}"
                            MaximumDate="{Binding EndDate}" />
                <Label Grid.Column="6"
                       Text="End Date"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <DatePicker Grid.Column="7"
                            Date="{Binding EndDate}"
                            MinimumDate="{Binding StartDate}" />
            </Grid>
            <Grid Grid.Row="2">
                <CollectionView ItemsSource="{Binding Timesheets}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:EmployeeTimesheetSummary">
                            <VerticalStackLayout Spacing="12">
                                <CollectionView x:Name="TimesheetRows"
                                                BindingContext="{Binding .}"
                                                ItemsSource="{Binding Timesheets}"
                                                SelectionMode="None">
                                    <CollectionView.Header>
                                        <Border StrokeShape="RoundRectangle 10 10 0 0"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                                            <Grid ColumnSpacing="12"
                                                  Padding="20,14"
                                                  ColumnDefinitions="1.5*,1.2*,1.2*,1.2*,1.2*,1.2*,1*">
                                                <Label Text="Employee"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="1"
                                                       Text="Date"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="2"
                                                       Text="In 1"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="3"
                                                       Text="Out 1"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="4"
                                                       Text="In 2"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="5"
                                                       Text="Out 2"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                                <Label Grid.Column="6"
                                                       Text="Edited"
                                                       TextColor="White"
                                                       FontAttributes="Bold" />
                                            </Grid>
                                        </Border>
                                    </CollectionView.Header>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:AttendanceTimesheetSummary">
                                            <Border Style="{StaticResource TimesheetRowBorderStyle}">
                                                <Grid ColumnSpacing="12"
                                                      ColumnDefinitions="1.5*,1.2*,1.2*,1.2*,1.2*,1.2*,1*"
                                                      VerticalOptions="Center">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="{Binding Source={x:Reference TimesheetRows}, Path=BindingContext.Name}"
                                                               FontAttributes="Bold"
                                                               FontSize="14"
                                                               LineBreakMode="TailTruncation" />
                                                        <Label Text="{Binding Source={x:Reference TimesheetRows}, Path=BindingContext.Department}"
                                                               FontSize="12"
                                                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                                                        <Label Text="{Binding Source={x:Reference TimesheetRows}, Path=BindingContext.Section}"
                                                               FontSize="12"
                                                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                                                    </VerticalStackLayout>

                                                    <DatePicker Grid.Column="1"
                                                                Date="{Binding EntryDateDateTime}"
                                                                Format="MMM dd, yyyy"
                                                                IsEnabled="False" />

                                                    <Grid Grid.Column="2"
                                                          RowDefinitions="Auto,Auto"
                                                          RowSpacing="4"
                                                          HorizontalOptions="Center">
                                                        <DatePicker Grid.Row="0"
                                                                    Date="{Binding TimeIn1Date}"
                                                                    Format="MMM dd, yyyy"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeIn1}" />
                                                        <TimePicker Grid.Row="1"
                                                                    Time="{Binding TimeIn1Time}"
                                                                    Format="HH:mm"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeIn1}" />
                                                        <Label Grid.RowSpan="2"
                                                               Text="N/A"
                                                               IsVisible="{Binding HasTimeIn1, Converter={StaticResource BooleanNegationConverter}}"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="12"
                                                               Opacity="0.6" />
                                                    </Grid>

                                                    <Grid Grid.Column="3"
                                                          RowDefinitions="Auto,Auto"
                                                          RowSpacing="4"
                                                          HorizontalOptions="Center">
                                                        <DatePicker Grid.Row="0"
                                                                    Date="{Binding TimeOut1Date}"
                                                                    Format="MMM dd, yyyy"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeOut1}" />
                                                        <TimePicker Grid.Row="1"
                                                                    Time="{Binding TimeOut1Time}"
                                                                    Format="HH:mm"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeOut1}" />
                                                        <Label Grid.RowSpan="2"
                                                               Text="N/A"
                                                               IsVisible="{Binding HasTimeOut1, Converter={StaticResource BooleanNegationConverter}}"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="12"
                                                               Opacity="0.6" />
                                                    </Grid>

                                                    <Grid Grid.Column="4"
                                                          RowDefinitions="Auto,Auto"
                                                          RowSpacing="4"
                                                          HorizontalOptions="Center">
                                                        <DatePicker Grid.Row="0"
                                                                    Date="{Binding TimeIn2Date}"
                                                                    Format="MMM dd, yyyy"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeIn2}" />
                                                        <TimePicker Grid.Row="1"
                                                                    Time="{Binding TimeIn2Time}"
                                                                    Format="HH:mm"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeIn2}" />
                                                        <Label Grid.RowSpan="2"
                                                               Text="N/A"
                                                               IsVisible="{Binding HasTimeIn2, Converter={StaticResource BooleanNegationConverter}}"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="12"
                                                               Opacity="0.6" />
                                                    </Grid>

                                                    <Grid Grid.Column="5"
                                                          RowDefinitions="Auto,Auto"
                                                          RowSpacing="4"
                                                          HorizontalOptions="Center">
                                                        <DatePicker Grid.Row="0"
                                                                    Date="{Binding TimeOut2Date}"
                                                                    Format="MMM dd, yyyy"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeOut2}" />
                                                        <TimePicker Grid.Row="1"
                                                                    Time="{Binding TimeOut2Time}"
                                                                    Format="HH:mm"
                                                                    IsEnabled="False"
                                                                    IsVisible="{Binding HasTimeOut2}" />
                                                        <Label Grid.RowSpan="2"
                                                               Text="N/A"
                                                               IsVisible="{Binding HasTimeOut2, Converter={StaticResource BooleanNegationConverter}}"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               FontSize="12"
                                                               Opacity="0.6" />
                                                    </Grid>

                                                    <Label Grid.Column="6"
                                                           Text="{Binding IsEdited, StringFormat='{0}'}"
                                                           HorizontalOptions="End"
                                                           VerticalTextAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="24"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="8">
                            <Label Text="No timesheets available"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Select a charging and date range to load timesheets."
                                   HorizontalTextAlignment="Center"
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
