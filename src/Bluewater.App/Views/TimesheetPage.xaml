<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bluewater.App.Models"
             x:Class="Bluewater.App.Views.TimesheetPage"
             Title="TimesheetsPage">
    <CollectionView ItemsSource="{Binding Timesheets}"
                    Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:AttendanceTimesheetSummary">
                <Grid Padding="8"
                      ColumnDefinitions="2*,Auto,Auto,Auto"
                      ColumnSpacing="12">
                    <Label Text="{Binding EntryDate, StringFormat='{0:d}'}"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="{Binding TimeIn1, StringFormat='{0:t}'}"
                           FontSize="12" />
                    <Label Grid.Column="2"
                           Text="{Binding TimeOut1, StringFormat='{0:t}'}"
                           FontSize="12" />
                    <Label Grid.Column="3"
                           Text="{Binding IsEdited, StringFormat='{0}'}"
                           FontSize="12"
                           HorizontalTextAlignment="End" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.Header>
            <Grid ColumnDefinitions="2*,Auto,Auto,Auto"
                  Padding="8"
                  ColumnSpacing="12"
                  BackgroundColor="{AppThemeBinding Light=#F0F4FA, Dark=#1F1F1F}">
                <Label Text="Entry Date"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Text="Time In"
                       FontAttributes="Bold" />
                <Label Grid.Column="2"
                       Text="Time Out"
                       FontAttributes="Bold" />
                <Label Grid.Column="3"
                       Text="Edited"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="End" />
            </Grid>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <Label Text="No timesheets available"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Create or import timesheets to populate this list."
                       HorizontalTextAlignment="Center"
                       FontSize="12" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>
