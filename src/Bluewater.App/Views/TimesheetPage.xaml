<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bluewater.App.Models"
             xmlns:converters="clr-namespace:Bluewater.App.Converters"
             xmlns:appViews="clr-namespace:Bluewater.App.Views"
             x:Class="Bluewater.App.Views.TimesheetPage"
             x:Name="TimesheetPageRoot"
             Title="Timesheets">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
            <Style x:Key="TimesheetRowBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="Stroke"
                        Value="Transparent" />
                <Setter Property="Padding"
                        Value="16,12" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid Padding="20,40"
              RowDefinitions="Auto,Auto,*"
              RowSpacing="16">
            <Grid ColumnDefinitions="*,Auto,Auto"
                  ColumnSpacing="12">
                <Label Text="Timesheets"
                       Style="{StaticResource HeadingTextStyle}" />
                <Button Grid.Column="1"
                        Text="Apply"
                        Command="{Binding ApplyDateRangeCommand}" />
                <Button Grid.Column="2"
                        Text="Refresh"
                        Command="{Binding RefreshCommand}" />
            </Grid>
            <Grid Grid.Row="1"
                  ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*"
                  ColumnSpacing="12"
                  RowSpacing="4">
                <Label Text="Charging"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <Picker Grid.Column="1"
                        Title="Select charging"
                        ItemsSource="{Binding Chargings}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedCharging}" />
                <Label Grid.Column="2"
                       Text="Tenant"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <Picker Grid.Column="3"
                        Title="Select tenant"
                        ItemsSource="{Binding TenantOptions}"
                        SelectedItem="{Binding SelectedTenant}" />
                <Label Grid.Column="4"
                       Text="Start Date"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <DatePicker Grid.Column="5"
                            Date="{Binding StartDate}"
                            MaximumDate="{Binding EndDate}" />
                <Label Grid.Column="6"
                       Text="End Date"
                       VerticalOptions="Center"
                       TextColor="{StaticResource TextSecondaryColor}" />
                <DatePicker Grid.Column="7"
                            Date="{Binding EndDate}"
                            MinimumDate="{Binding StartDate}" />
            </Grid>
            <Grid Grid.Row="2">
                <CollectionView ItemsSource="{Binding Timesheets}"
                                SelectionMode="None">
                    <CollectionView.Header>
                        <Border StrokeShape="RoundRectangle 10 10 0 0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                            <Grid ColumnSpacing="12"
                                  Padding="20,14"
                                  ColumnDefinitions="2*,1.2*,1*,1*,1*,Auto,Auto">
                                <Label Text="Employee"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="1"
                                       Text="Charging"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="2"
                                       Text="Work Hours"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="3"
                                       Text="Break Hours"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="4"
                                       Text="Late Hours"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="5"
                                       Text="Absences"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       FontAttributes="Bold" />
                                <Label Grid.Column="6"
                                       Text="Actions"
                                       TextColor="White"
                                       HorizontalOptions="End"
                                       FontAttributes="Bold" />
                            </Grid>
                        </Border>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:EmployeeTimesheetSummary">
                            <Border Style="{StaticResource TimesheetRowBorderStyle}">
                                <Grid ColumnSpacing="12"
                                      ColumnDefinitions="2*,1.2*,1*,1*,1*,Auto,Auto"
                                      VerticalOptions="Center">
                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="{Binding Name}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               LineBreakMode="TailTruncation" />
                                        <Label Text="{Binding Department}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                                        <Label Text="{Binding Section}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                                    </VerticalStackLayout>

                                    <Label Grid.Column="1"
                                           Text="{Binding Charging}"
                                           LineBreakMode="TailTruncation"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="2"
                                           Text="{Binding TotalWorkHours, StringFormat='{0:0.##}'}"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="3"
                                           Text="{Binding TotalBreak, StringFormat='{0:0.##}'}"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="4"
                                           Text="{Binding TotalLates, StringFormat='{0:0.##}'}"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="5"
                                           Text="{Binding TotalAbsents}"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center" />

                                    <Button Grid.Column="6"
                                            Text="Edit"
                                            Command="{Binding Source={x:Reference TimesheetPageRoot}, Path=BindingContext.EditTimesheetCommand}"
                                            CommandParameter="{Binding .}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="24"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="8">
                            <Label Text="No timesheet summaries available"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Select a charging and date range to load timesheets."
                                   HorizontalTextAlignment="Center"
                                   FontSize="12" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
            </Grid>
        </Grid>
        <appViews:TimesheetDetailsView HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       IsVisible="{Binding IsDetailsOpen}"
                                       IsOpen="{Binding IsDetailsOpen}"
                                       Title="{Binding DetailsTitle}"
                                       Timesheets="{Binding EditableTimesheets}"
                                       UpdateCommand="{Binding SaveTimesheetsCommand}"
                                       UpdateButtonText="{Binding DetailsPrimaryActionText}"
                                       IsUpdateEnabled="{Binding CanSaveTimesheets}"
                                       CloseCommand="{Binding CloseTimesheetDetailsCommand}" />
    </Grid>
</ContentPage>
