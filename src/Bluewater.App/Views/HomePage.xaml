<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Bluewater.App.ViewModels"
             xmlns:selectors="clr-namespace:Bluewater.App.Selectors"
             x:Class="Bluewater.App.Views.HomePage"
             Title="HomePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="AnnouncementRowBorderStyle"
                   TargetType="Border">
                <Setter Property="StrokeThickness"
                        Value="1" />
                <Setter Property="Stroke"
                        Value="Transparent" />
                <Setter Property="Padding"
                        Value="20,12" />
            </Style>
            <DataTemplate x:Key="AnnouncementPrimaryTemplate"
                          x:DataType="viewModels:HomeAnnouncement">
                <Border Style="{StaticResource AnnouncementRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="Auto,2*"
                          VerticalOptions="Center">
                        <Label Text="{Binding Title}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding Description}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                    </Grid>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="AnnouncementAlternateTemplate"
                          x:DataType="viewModels:HomeAnnouncement">
                <Border Style="{StaticResource AnnouncementRowBorderStyle}"
                        BackgroundColor="{AppThemeBinding Light=#0A386eb3, Dark=#262626}">
                    <Grid ColumnSpacing="12"
                          ColumnDefinitions="Auto,2*"
                          VerticalOptions="Center">
                        <Label Text="{Binding Title}"
                               FontAttributes="Bold" />
                        <Label Grid.Column="1"
                               Text="{Binding Description}"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                    </Grid>
                </Border>
            </DataTemplate>
            <selectors:AlternateRowTemplateSelector x:Key="AnnouncementTemplateSelector"
                                                    PrimaryTemplate="{StaticResource AnnouncementPrimaryTemplate}"
                                                    AlternateTemplate="{StaticResource AnnouncementAlternateTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <CollectionView ItemsSource="{Binding Announcements}"
                    ItemTemplate="{StaticResource AnnouncementTemplateSelector}">
        <CollectionView.Header>
            <Border StrokeShape="RoundRectangle 10 10 0 0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource AccentColor}, Dark=#1F5AA8}">
                <Grid ColumnSpacing="12"
                      Padding="20,14"
                      ColumnDefinitions="Auto,2*">
                    <Label Text="Title"
                           TextColor="White"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="Description"
                           TextColor="White"
                           FontAttributes="Bold" />
                </Grid>
            </Border>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <Label Text="No announcements yet"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Company announcements will appear here when published."
                       HorizontalTextAlignment="Center"
                       FontSize="12" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>
