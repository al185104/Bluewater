<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Bluewater.App.ViewModels"
             x:Class="Bluewater.App.Views.HomePage"
             Title="HomePage">
    <CollectionView ItemsSource="{Binding Announcements}"
                    Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="viewModels:HomeAnnouncement">
                <Grid Padding="8"
                      ColumnDefinitions="Auto,2*"
                      ColumnSpacing="12">
                    <Label Text="{Binding Title}"
                           FontAttributes="Bold" />
                    <Label Grid.Column="1"
                           Text="{Binding Description}"
                           FontSize="12" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.Header>
            <Grid ColumnDefinitions="Auto,2*"
                  Padding="8"
                  ColumnSpacing="12"
                  BackgroundColor="{AppThemeBinding Light=#F0F4FA, Dark=#1F1F1F}">
                <Label Text="Title"
                       FontAttributes="Bold" />
                <Label Grid.Column="1"
                       Text="Description"
                       FontAttributes="Bold" />
            </Grid>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <VerticalStackLayout Padding="24"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="8">
                <Label Text="No announcements yet"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label Text="Company announcements will appear here when published."
                       HorizontalTextAlignment="Center"
                       FontSize="12" />
            </VerticalStackLayout>
        </CollectionView.EmptyView>
    </CollectionView>
</ContentPage>
