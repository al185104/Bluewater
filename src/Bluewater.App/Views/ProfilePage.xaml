<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bluewater.App.Views.ProfilePage"
             Title="ProfilePage">
    <CollectionView ItemsSource="{Binding Profiles}" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding DisplayName}" FontAttributes="Bold" />
                    <Label Text="{Binding Email}" FontSize="12" />
                    <Label Text="{Binding Department}" FontSize="12" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>