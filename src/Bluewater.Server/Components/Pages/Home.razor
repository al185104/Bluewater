        width: 100%;
    }

    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    li {
        margin: 5px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    p {
        font-size: 18px;
        line-height: 1.6;
    }    
</style>

